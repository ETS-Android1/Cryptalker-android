<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/room_row"
                xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/chat_row_owner_layout">

    <TextView
            android:id="@+id/message"
            style="@style/message_row_owner"/>

    <TextView
            android:id="@+id/pending"
            style="@style/message_pending"
            android:visibility="gone"
            android:text="@string/chat_new_message_pending"/>

    <TextView
            android:id="@+id/fail"
            style="@style/message_fail"
            android:visibility="gone"
            android:text="@string/chat_new_message_fail"/>

</LinearLayout>
