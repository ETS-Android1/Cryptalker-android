<resources>

    <!-- Attributes -->
    <color name="main">#33b5e5</color>
    <color name="red">#ffe54541</color>
    <color name="dark_grey">#ff1e1e1e</color>
    <color name="medium_grey">#464646</color>
    <color name="light_grey">#aaaaaa</color>
    <color name="light_light_grey">#ffdedede</color>
    <color name="white">#ffffff</color>
    <color name="white_alpha_20">#ccffffff</color>
    <color name="light_blue">#00C0E5</color>
    <!-- /Attributes -->


    <!-- Holo Theme Override -->
    <style name="Cryptalker"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/actionBar</item>
    </style>

    <style name="actionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/main</item>
    </style>
    <!-- /Holo Theme Override -->

    <!-- Menu -->
    <style name="actionBar_progress">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="menu">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- /Menu -->


    <!-- Page Wrapper -->
    <style name="layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="layout_100">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:typeface">monospace</item>
    </style>
    <!-- /Page Wrapper -->


    <!-- General -->
    <style name="input_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_input</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">@color/light_grey</item>
    </style>

    <style name="button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>
    <!-- /General -->


    <!-- Dialog -->
    <style name="dialog_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="dialog_layout_progress">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/white_alpha_20</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="dialog_header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/main</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="dialog_box">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    <!-- /Dialog -->


    <!-- Dispatcher -->
    <style name="dispatcher_loading_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">27dp</item>
    </style>

    <style name="dispatcher_progressbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:indeterminate">true</item>
    </style>
    <!-- /Dispatcher -->


    <!-- Home -->
    <style name="catch_phrase">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <!-- /Home -->


    <!-- Dashboard -->
    <style name="user_list">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dashboard_list">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/light_grey</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="dashboard_row_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">17dp</item>
    </style>

    <style name="dashboard_row_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:color">@color/main</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="dashboard_row_last_message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:color">@color/medium_grey</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="dashboard_half_button" parent="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="dashboard_half_button_red" parent="dashboard_half_button">
        <item name="android:background">@drawable/rounded_button_red</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <!-- /Dashboard -->

    <!-- Chat -->
    <style name="chat_list" parent="dashboard_list">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:paddingBottom">60dp</item>
    </style>
    <style name="chat_toolbar_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/light_light_grey</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="chat_toolbar_input">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">60dp</item>
        <item name="android:color">@color/dark_grey</item>
        <item name="android:textColorHint">@color/medium_grey</item>
    </style>
    <style name="chat_toolbar_send">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@color/light_light_grey</item>
    </style>

    <style name="chat_row_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="chat_row_owner_layout" parent="@style/chat_row_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="chat_row_other_layout" parent="@style/chat_row_layout">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">50dp</item>
    </style>

    <style name="message_row">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="message_row_owner" parent="@style/message_row">
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_text_view</item>
    </style>
    <style name="message_row_other" parent="@style/message_row">
        <item name="android:background">@drawable/rounded_text_view_grey</item>
    </style>
    <!-- /Chat -->

</resources>
