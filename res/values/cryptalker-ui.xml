<resources>

    <!-- Attributes -->
    <color name="main">#33b5e5</color>
    <color name="white">#ffffff</color>
    <color name="light_grey">#aaaaaa</color>
    <!-- /Attributes -->

    <!-- Holo Theme Override -->
    <style name="Cryptalker"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/actionBar</item>
    </style>

    <style name="actionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/main</item>
    </style>
    <!-- /Holo Theme Override -->

    <!-- Menu -->
    <style name="menu">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- /Menu -->

    <!-- Page Wrapper -->
    <style name="layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <!-- /Page Wrapper -->

    <!-- General -->
    <style name="input_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_input</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">@color/light_grey</item>
    </style>

    <style name="button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>
    <!-- /General -->

    <!-- Dialog -->
    <style name="dialog_header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/main</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="dialog_box">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    <!-- /Dialog -->

    <!-- Dispatcher -->
    <style name="dispatcher_loading_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">27dp</item>
    </style>
    <style name="dispatcher_progressbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:indeterminate">true</item>
    </style>
    <!-- /Dispatcher -->

    <!-- Home -->
    <style name="catch_phrase">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <!-- /Home -->
</resources>
